/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  background red
  transition all 0.5s
  transform translateX(-120%) rotate(1000deg)
  max-height 0
  padding 0 !important
  &.order-enter-active
    background rgb(91, 227, 64)
    max-height 60px
    padding 2rem 0 !important
    transform translateX(0) rotate(0);

.order-leave
    background red
    max-height 60px
    padding 2rem 0 !important
    transform translateX(0) 
  &.order-leave-active
    background green
    transition all 0.5s
    transform translateX(-120%)
    max-height 0
    padding 0 !important
